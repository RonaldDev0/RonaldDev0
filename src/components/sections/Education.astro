---
import { Image } from 'astro:assets'
import { Card, CardHeader, CardTitle, CardContent, CardDescription } from '@/components/ui/card'

// Import education images
import platziIcon from '../../assets/education/platzi.svg'
import midudevIcon from '../../assets/education/midudev.svg'
import sonnySanghaIcon from '../../assets/education/sonny-sangha.webp'
import dotCsvIcon from '../../assets/education/dot-csv.webp'
import gentlemanProgrammingIcon from '../../assets/education/gentleman-programming.webp'
import mouredevIcon from '../../assets/education/mouredev.webp'
import faztIcon from '../../assets/education/fazt.webp'
import aaronga97Icon from '../../assets/education/aaronga97.webp'
import edteamIcon from '../../assets/education/edteam.webp'
import diegoveloperIcon from '../../assets/education/diegoveloper.webp'
import absaCodingIcon from '../../assets/education/absa-coding.webp'
import carlosAzaustreIcon from '../../assets/education/carlos-azaustre.webp'
import nateGentileIcon from '../../assets/education/nate-gentile.webp'

type IEducation = {
  name: string,
  img: any,
  link: string
}

const education: IEducation[] = [
  {
    name: 'Platzi',
    img: platziIcon,
    link: 'https://www.youtube.com/@Platzi'
  },
  {
    name: 'Midudev',
    img: midudevIcon,
    link: 'https://www.youtube.com/@midudev'
  },
  {
    name: 'Sonny Sangha',
    img: sonnySanghaIcon,
    link: 'https://www.youtube.com/@SonnySangha'
  },
  {
    name: 'Dot CSV',
    img: dotCsvIcon,
    link: 'https://www.youtube.com/@DotCSV'
  },
  {
    name: 'Gentleman Programming',
    img: gentlemanProgrammingIcon,
    link: 'https://www.youtube.com/@gentlemanprogramming'
  },
  {
    name: 'MoureDev',
    img: mouredevIcon,
    link: 'https://www.youtube.com/@mouredevtv'
  },
  {
    name: 'Fazt',
    img: faztIcon,
    link: 'https://www.youtube.com/@FaztTech'
  },
  {
    name: 'aaronga97',
    img: aaronga97Icon,
    link: 'https://www.youtube.com/@aaronga97'
  },
  {
    name: 'EDteam',
    img: edteamIcon,
    link: 'https://www.youtube.com/@EDteam'
  },
  {
    name: 'Diegoveloper',
    img: diegoveloperIcon,
    link: 'https://www.youtube.com/@diegoveloper'
  },
  {
    name: 'Absa Coding',
    img: absaCodingIcon,
    link: 'https://www.youtube.com/@AbsaCoding'
  },
  {
    name: 'Carlos Azaustre',
    img: carlosAzaustreIcon,
    link: 'https://www.youtube.com/@CarlosAzaustre'
  },
  {
    name: 'Nate Gentile',
    img: nateGentileIcon,
    link: 'https://www.youtube.com/@NateGentile7'
  }
]

const { t } = Astro.props;
---

<section id='education' class='space-y-8 sm:space-y-12'>
  <div class='text-center space-y-4 sm:space-y-6 max-w-4xl mx-auto'>
    <h2 class='text-3xl sm:text-4xl lg:text-5xl font-bold'>{t.title}</h2>
    <CardDescription className='text-base sm:text-lg leading-relaxed max-w-3xl mx-auto'>
      {t.description1}
      <br />
      {t.description2}
    </CardDescription>
  </div>
  <Card className='max-w-6xl mx-auto'>
    <CardHeader className='text-center'>
      <CardTitle>
        <h3 class='text-2xl sm:text-3xl font-bold'>{t.featured}</h3>
      </CardTitle>
    </CardHeader>
    <CardContent>
      <div class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 sm:gap-6'>
        {education.map(item => (
          <a 
            href={item.link} 
            target='_blank' 
            rel='noopener noreferrer'
            class='text-center flex flex-col items-center justify-center gap-3 p-4 rounded-lg hover:bg-accent transition-all duration-200 group'
          >
            <div class='relative'>
              <Image
                src={item.img}
                alt={`${item.name} channel`}
                class='rounded-full transition-transform duration-200 group-hover:scale-110'
                width='56'
                height='56'
                loading='lazy'
              />
            </div>
            <p class='text-xs sm:text-sm font-medium text-muted-foreground group-hover:text-foreground transition-colors duration-200'>{item.name}</p>
          </a>
        ))}
      </div>
    </CardContent>
  </Card>
</section>