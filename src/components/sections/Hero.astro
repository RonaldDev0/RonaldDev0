---
import { Image } from 'astro:assets'
import { Button } from '../ui/button'

// Import icons
import linkedinIcon from '../../assets/icons/linkedin.svg'
import githubIcon from '../../assets/icons/github.svg'
import fileIcon from '../../assets/icons/file.svg'

const { t } = Astro.props;

const buttons = [
  {
    text: t.buttons.linkedin,
    ariaLabel: t.buttons.linkedin_aria,
    href: 'https://www.linkedin.com/in/ronald-zamora-524094353/',
    img: linkedinIcon
  },
  {
    text: t.buttons.github,
    ariaLabel: t.buttons.github_aria,
    href: 'https://github.com/RonaldDev0',
    img: githubIcon
  },
  {
    text: t.buttons.resume,
    ariaLabel: t.buttons.resume_aria,
    href: '/resume',
    img: fileIcon
  }
]
---

<section
  id='hero'
  aria-label='hero'
  class='min-h-screen flex items-center justify-center py-8 sm:py-12 lg:py-16'
  >
  <div class='w-full max-w-6xl flex flex-col lg:flex-row items-center justify-between gap-8 lg:gap-12 xl:gap-16'>
    <div class='text-center lg:text-left space-y-4 sm:space-y-6'>
      <div class='space-y-2 sm:space-y-4'>
        <h1 class='text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight'>
          <span class='block'>{t.title}</span>
        </h1>
        <h2 class='text-2xl sm:text-3xl lg:text-4xl font-semibold text-muted-foreground mt-2'>
          {t.subtitle}
        </h2>
        <p class='text-lg sm:text-xl lg:text-2xl text-muted-foreground mt-4'>
          {t.description}
        </p>
      </div>
      <div class='flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center lg:justify-start'>
        {buttons.map(button => (
          <a
            href={button.href}
            target='_blank'
            rel='noopener noreferrer'
            aria-label={button.ariaLabel}
            class='inline-flex'
          >
            <Button
              variant='outline'
              size='lg'
              className='w-full sm:w-auto transition-all duration-200 hover:scale-105'
            >
              <Image
                src={button.img}
                alt=''
                aria-hidden='true'
                width='24'
                height='24'
              />
              <span>{button.text}</span>
            </Button>
          </a>
        ))}
      </div>
    </div>
    <div class='flex-shrink-0'>
      <Image
        src='/personal/foto.webp'
        class='rounded-full shadow-2xl border-4 border-card'
        alt='Ronald Zamora - Software Developer'
        width='280'
        height='280'
        loading='eager'
        fetchpriority='high'
      />
    </div>
  </div>
</section>